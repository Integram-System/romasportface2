<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :image %><br>
    <%= f.attachment_field :image %>
    <% if @post.image_id? %>
      <%= image_tag attachment_url(@post, :image, :fill, 100, 100) %> <br>
      <%= f.label :remove_image %><br>
      <%= f.check_box :remove_image %>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :image_id %><br>
    <%= f.text_field :image_id %>
  </div>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :content_short %><br>
    <%= f.text_field :content_short %>
  </div>
  <div class="field">
    <%= f.label :content_first %><br>
    <%= f.text_field :content_first %>
  </div>
  <div class="field">
    <%= f.label :content_blockquote %><br>
    <%= f.text_field :content_blockquote %>
  </div>
  <div class="field">
    <%= f.label :content_second %><br>
    <%= f.text_area :content_second %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
