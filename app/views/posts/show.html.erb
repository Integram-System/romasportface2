<!-- Document Wrapper
============================================= -->
<div id="wrapper" class="clearfix">

	<!-- Header
	============================================= -->
	<%#= render "mocks/blog_single_small/header" %>

	<!-- Page Title
	============================================= -->
	<%= render "posts/show/page_title" %>

	<!-- Content
	============================================= -->
	<%= render "posts/show/content" %>

	<!-- Footer
	============================================= -->
	<%#= render "mocks/blog_single_small/footer" %>

</div><!-- #wrapper end -->

<!-- Go To Top
============================================= -->
<div id="gotoTop" class="icon-angle-up"></div>




<p id="notice"><%= notice %></p>

<p>
  <% if @post.image.present? %>
    <%= image_tag attachment_url(@post, :image, :fill, 100, 100), alt: "post image", class: "" %>
  <% else %>
    nessuna immagine
  <% end %>
</p>

<p>
  <strong>Image:</strong>
  <%= @post.image_id %>
</p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content short:</strong>
  <%= @post.content_short %>
</p>

<p>
  <strong>Content first:</strong>
  <%= @post.content_first %>
</p>

<p>
  <strong>Content blockquote:</strong>
  <%= @post.content_blockquote %>
</p>

<p>
  <strong>Content second:</strong>
  <%= @post.content_second %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
