<% @posts.each do |post| %>

  <div class="entry clearfix">
    <div class="entry-image">
      <a href="images/blog/full/17.jpg" data-lightbox="image">
        <% if post.image.present? %>
          <%= image_tag attachment_url(post, :image, :fill, 400, 300), alt: "post image", class: "image_fade" %>
        <% else %>
          nessuna immagine
        <% end %>
      </a>
    </div>
    <div class="entry-c">
      <div class="entry-title">
        <h2>
          <%= link_to post_path(post.id), :class => "" do %>
            <%= post.title %></a>
          <% end %>
        </h2>
      </div>
      <ul class="entry-meta clearfix">
        <li><i class="icon-calendar3"></i> 10th Feb 2014</li>
        <li><a href="#"><i class="icon-user"></i> admin</a></li>
        <li><i class="icon-folder-open"></i> <a href="#">General</a>, <a href="#">Media</a></li>
        <li><a href="blog-single.html#comments"><i class="icon-comments"></i> 13</a></li>
        <li><a href="#"><i class="icon-camera-retro"></i></a></li>
      </ul>
      <div class="entry-content">
        <p><%= post.content_short %></p>
        <%= link_to 'Read More', post_path(post.id), class: "more-link" %>
      </div>
    </div>
  </div>

<% end %>
