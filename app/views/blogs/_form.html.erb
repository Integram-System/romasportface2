<%= form_for(@blog) do |f| %>
  <% if @blog.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@blog.errors.count, "error") %> prohibited this blog from being saved:</h2>

      <ul>
      <% @blog.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :image_id %><br>
    <%= f.text_field :image_id %>
  </div>

  <div class="field">
    <%= f.label :image %><br>
    <%= f.attachment_field :image %>
    <% if @blog.image_id? %>
      <%= image_tag attachment_url(@blog, :image, :fill, 100, 100) %> <br>
      <%= f.label :remove_image %><br>
      <%= f.check_box :remove_image %>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :content_short %><br>
    <%= f.text_field :content_short %>
  </div>
  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
